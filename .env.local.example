APP_URL=https://your-app.vercel.app
NODE_ENV=development
JOBS_SECRET=replace-with-long-random

DATABASE_URL=postgres://user:pass@host:5432/dbname

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

CONVOSO_WEBHOOK_SECRET=replace-with-shared-secret
CONVOSO_AUTH_TOKEN=your-convoso-api-token
CRON_SECRET=replace-with-cron-secret

DEEPGRAM_API_KEY=dg_your_key
ASSEMBLYAI_API_KEY=aai_your_key
OPENAI_API_KEY=sk_your_key
ANTHROPIC_API_KEY=sk_ant_key   # optional fallback

ASR_PRIMARY=deepgram
ASR_FALLBACK=assemblyai

REDACTION=false
HIPAA_MODE=false

# Encryption Key for sensitive data (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=generate_with_openssl_rand_hex_32

# Stripe Billing Configuration
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product/Price IDs (create these in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=price_starter_monthly_id
NEXT_PUBLIC_STRIPE_GROWTH_PRICE_ID=price_growth_monthly_id
NEXT_PUBLIC_STRIPE_SCALE_PRICE_ID=price_scale_monthly_id
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_id

# Site URL for redirects
NEXT_PUBLIC_SITE_URL=http://localhost:3000
